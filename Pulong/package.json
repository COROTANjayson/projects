		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.12",
		"@types/eslint": "8.56.0",
		"@types/lodash": "^4.17.1",
		"@types/node": "20.12.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "10.4.19",
